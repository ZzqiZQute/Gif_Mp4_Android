    <Button android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/btnmp42gif"
        android:text="Mp42Gif">
    </Button>
    <Button android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </Button>
</LinearLayout>
</FrameLayout>